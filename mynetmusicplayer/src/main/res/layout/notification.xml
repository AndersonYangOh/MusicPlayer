<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名称"
        android:layout_gravity="center"
        android:textSize="28sp" />

    <ImageButton
        android:id="@+id/previous_music_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/left_dark"
        android:onClick="onclick" />

    <ImageButton
        android:id="@+id/play_music_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_dark"
        android:onClick="onclick" />

    <ImageButton
        android:id="@+id/next_music_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_dark"
        android:onClick="onclick" />

</LinearLayout>